{
  "name": "middle.messenger.praktikum.yandex",
  "version": "1.0.0",
  "description": "---",
  "scripts": {
    "start": "npm run build && node ./server.js",
    "dev": "webpack --config ./webpack.dev.js && webpack serve --config ./webpack.dev.js",
    "build": "webpack --config ./webpack.prod.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . --fix",
    "stylelint": "stylelint src/**/*.{css,scss}",
    "stylelint:fix": "stylelint src/**/*.{css,scss} --fix",
    "prettier": "prettier --write src/**/*.{js,ts,scss}",
    "check:lint": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oalbukova/middle.messenger.praktikum.yandex.git"
  },
  "alias": {
    "core": "./src/core",
    "components": "./src/components",
    "pages": "./src/pages",
    "data": "./src/data",
    "helpers": "./src/helpers",
    "handlebars": "handlebars/dist/handlebars.min.js"
  },
  "author": "Olga Albukova",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/oalbukova/middle.messenger.praktikum.yandex/issues"
  },
  "homepage": "https://github.com/oalbukova/middle.messenger.praktikum.yandex#readme",
  "husky": {
    "hooks": {
      "pre-commit": "npm-run-all --parallel check:*"
    }
  },
  "lint-staged": {
    "*.{js,json,md,html}": [
      "npm run prettier"
    ],
    "*.scss": [
      "npm run prettier",
      "npm run lint"
    ],
    "*.ts": [
      "npm run prettier",
      "npm run lint"
    ]
  },
  "devDependencies": {
    "@types/node": "18.11.18",
    "@typescript-eslint/eslint-plugin": "5.46.1",
    "@typescript-eslint/parser": "5.46.1",
    "css-loader": "6.7.3",
    "eslint": "8.29.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "html-webpack-plugin": "^5.5.0",
    "husky": "8.0.2",
    "lint-staged": "13.1.0",
    "mini-css-extract-plugin": "^2.7.2",
    "nanoid": "4.0.1",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.20",
    "postcss-import": "15.1.0",
    "postcss-loader": "7.0.2",
    "postcss-nested": "6.0.0",
    "postcss-simple-vars": "7.0.1",
    "prettier": "2.8.1",
    "stylelint": "14.16.0",
    "stylelint-config-prettier-scss": "0.0.1",
    "stylelint-config-standard-scss": "6.1.0",
    "ts-loader": "9.4.2",
    "typescript": "4.9.4",
    "webpack": "5.75.0",
    "webpack-cli": "5.0.1",
    "webpack-dev-server": "4.11.1",
    "webpack-merge": "5.8.0",
    "dotenv": "16.0.3",
    "dotenv-webpack": "8.0.1",
    "clean-webpack-plugin": "4.0.0"
  },
  "dependencies": {
    "express": "4.18.1",
    "handlebars": "4.7.7"
  }
}
