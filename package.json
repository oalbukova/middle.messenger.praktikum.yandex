{
  "name": "middle.messenger.praktikum.yandex",
  "version": "1.0.0",
  "description": "---",
  "scripts": {
    "dev": "parcel src/index.html --no-cache",
    "build": "parcel build src/index.html --no-cache",
    "start": "npm run build && node ./server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . --fix",
    "stylelint": "stylelint src/**/*.{css,scss}",
    "stylelint:fix": "stylelint src/**/*.{css,scss} --fix --custom-syntax postcss-scss",
    "prettier": "prettier --write src/**/*.{js,ts,scss}"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oalbukova/middle.messenger.praktikum.yandex.git"
  },
  "alias": {
    "core": "./src/core",
    "components": "./src/components",
    "pages": "./src/pages"
  },
  "author": "Olga Albukova",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/oalbukova/middle.messenger.praktikum.yandex/issues"
  },
  "homepage": "https://github.com/oalbukova/middle.messenger.praktikum.yandex#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,md,html}": [
      "prettier --write"
    ],
    "*.scss": [
      "prettier --write",
      "npm run lint-css"
    ],
    "*.ts": [
      "prettier --write",
      "npm run lint"
    ]
  },
  "devDependencies": {
    "@anikin/parcel-transformer-handlebars": "1.0.9",
    "@parcel/transformer-sass": "2.8.0",
    "@typescript-eslint/eslint-plugin": "5.46.1",
    "@typescript-eslint/parser": "5.46.1",
    "eslint": "8.29.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "8.0.2",
    "lint-staged": "13.1.0",
    "parcel": "2.8.0",
    "postcss": "^8.4.20",
    "postcss-import": "15.1.0",
    "postcss-simple-vars": "7.0.1",
    "precss": "4.0.0",
    "prettier": "2.8.1",
    "stylelint": "14.16.0",
    "stylelint-config-prettier": "9.0.4",
    "stylelint-config-rational-order": "0.1.2",
    "stylelint-config-standard": "29.0.0",
    "stylelint-order": "5.0.0",
    "stylelint-prettier": "2.0.0",
    "stylelint-scss": "4.3.0",
    "ts-node": "10.9.1",
    "typescript": "4.9.4"
  },
  "dependencies": {
    "express": "4.18.1",
    "handlebars": "4.7.7",
    "postcss-scss": "^4.0.6"
  }
}
