{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "rootDir": "./src",
    "baseUrl": "./src",
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "typeRoots": ["node_modules/@types", "typings/app.d.ts"]
  },
  "include": ["src", "src/declaration.d.ts"]
}
