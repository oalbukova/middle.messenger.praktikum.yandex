{{!< desctop}}

<main class="sign-in">
  <img class="sign-in__image-left" alt="фоновая картинка" src="/static/images/auth-left.png"/>
  <img class="sign-in__image-right" alt="фоновая картинка" src="/static/images/auth-right.png"/>
  <form class="sign-in__form">
    {{> form-title/form-title formTitle="Авторизация"}}
    {{#each signin.inputs}}
      {{>input/input }}
    {{/each}}
    {{> button/button-submit/button-submit text="Войти" modificator="contained" }}
    {{> button/button-link/button-link text="Еще не зарегистрированы?" buttonLinkHref="/src/pages/sign-up/sign-up.hbs" }}
  </form>
</main>
